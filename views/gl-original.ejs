
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="css/gallery.css" />
    <!-- <link rel="stylesheet" href="icons/css/all.min.css" />
    <link rel="stylesheet" href="icons/css/fontawesome.min.css" /> -->
</head>

<body>
    <div class="container">
        <h2>
            <%= heading %>
        </h2>
        <a href="/" id="homeTab"><i class="fas fa-home"></i></a>
        <span id="toggle"><i class="fa-solid fa-video" onclick="tranfxn()"></i></span>
        <div class="grid-box imageData">
            <% fileData.map((file)=>{ %> 
                <% if(file.split('.')[1] !=='mp4' ){ %>
                    <div class="photos">
                        <img src="uploads/<%= file %>" alt="uploads/<%= file %>" />
                        <a href="uploads/<%= file %>" download="uploads/<%= file %>"><i class="fas fa-arrow-down"></i></a>
                    </div>
                <% } %>
            <% }) %>
        </div>
        <div class="grid-box videoData">
            <% fileData.map((file)=>{ %> 
                <% if(file.split('.')[1]==='mp4' ){ %>
                    <div class="videos">
                        <video controls>
                            <source src="uploads/<%= file %>" type="video/mp4" />
                        </video>
                    </div>
                <% } %>
            <% }) %>
        </div>
    </div>
    <footer>
        <span>&copy;<small></small><a href="https://james-mumo.000webhostapp.com/" target="_blank">JayTech</a>| All Rights Reserved.</span>
    </footer>

    <script>
        document.querySelector("span small").innerHTML = new Date().getFullYear();
        const tranfxn = () => {
            document.querySelector(".videoData").classList.toggle("transform");
            document.querySelector(".imageData").classList.toggle("transform");
        };
    </script>
    <script src="https://kit.fontawesome.com/a50253de37.js" crossorigin="anonymous"></script>
</body>

</html>
